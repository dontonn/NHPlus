<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.hitec.nhplus.controller.AdminPanelController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- TOP: Header -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #f39c12; -fx-padding: 15;">
            <children>
                <Label text="⚙️ Verwaltung - Benutzerverwaltung" textFill="white">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- CENTER: Main Content -->
    <center>
        <VBox spacing="20.0" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <children>

                <!-- New User Creation Section -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <children>
                        <Label text="👤 Neuen Benutzer erstellen" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                        <!-- Status Message -->
                        <Label fx:id="statusLabel" text=""
                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5;"
                               visible="false" />

                        <!-- User Input Form -->
                        <GridPane hgap="15.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Row 1: Username and Password -->
                                <Label text="Benutzername:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="usernameField" promptText="Eindeutiger Benutzername..." GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Passwort:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                <PasswordField fx:id="passwordField" promptText="Zahl + Buchstabe + (+, -, .)" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                                <!-- Row 2: First and Last Name -->
                                <Label text="Vorname:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="firstNameField" promptText="Vorname eingeben..." GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Nachname:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                <TextField fx:id="lastNameField" promptText="Nachname eingeben..." GridPane.columnIndex="3" GridPane.rowIndex="1" />

                                <!-- Row 3: Phone and Birthday -->
                                <Label text="Telefon:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <TextField fx:id="phoneField" promptText="0123-456-789" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Geburtstag:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                <DatePicker fx:id="birthdayPicker" promptText="Geburtstag wählen..." GridPane.columnIndex="3" GridPane.rowIndex="2" />

                                <!-- Row 4: Admin Status and Create Button -->
                                <Label text="Administrator:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <CheckBox fx:id="adminCheckBox" text="Ist Administrator" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Button fx:id="createButton" text="✅ Benutzer erstellen" onAction="#handleCreateUser"
                                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;"
                                        GridPane.columnIndex="3" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <!-- Existing Users Table Section -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="👥 Bestehende Benutzer" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <Button fx:id="refreshButton" text="🔄 Aktualisieren" onAction="#handleRefreshUsers"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                            </children>
                        </HBox>

                        <!-- Users Table -->
                        <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                                <TableColumn fx:id="usernameColumn" text="Benutzername" prefWidth="120.0" />
                                <TableColumn fx:id="firstNameColumn" text="Vorname" prefWidth="100.0" />
                                <TableColumn fx:id="lastNameColumn" text="Nachname" prefWidth="100.0" />
                                <TableColumn fx:id="phoneColumn" text="Telefon" prefWidth="120.0" />
                                <TableColumn fx:id="birthdayColumn" text="Geburtstag" prefWidth="100.0" />
                                <TableColumn fx:id="adminColumn" text="Admin" prefWidth="70.0" />
                                <TableColumn fx:id="actionsColumn" text="Aktionen" prefWidth="100.0" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

    <!-- BOTTOM: Control Buttons -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <children>
                <Label fx:id="userCountLabel" text="Anzahl Benutzer: 0" textFill="white" style="-fx-font-size: 12px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" text="❌ Schließen" onAction="#handleClose"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
            </children>
        </HBox>
    </bottom>

</BorderPane>